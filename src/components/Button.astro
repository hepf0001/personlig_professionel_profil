---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-6 p-4 font-semibold shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out uppercase";

const variantClasses = {
  primary: "bg-custom-blue hover-bg-custom-blue text-white",
  secondary: "border-2 border-custom-blue hover-border-custom-blue text-gray-800",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>

<style>
  .bg-custom-blue {
    background-color: #0d9ee0;
  }
  .hover-bg-custom-blue:hover {
    background-color: #0369a1;
  }

  .border-custom-blue {
    border-color: #0d9ee0;
  }
  .hover-border-custom-blue:hover {
    border-color: #0369a1;
  }
</style>
