---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-6 p-3 font-semibold shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out uppercase";

const variantClasses = {
  primary: "bg-white hover:bg-neutral-200 text-gray-800",
  secondary: "bg-custom-blue-2 hover-bg-custom-blue-2 text-white",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>

<style>
  .bg-custom-blue {
    background-color: #0188c7;
  }
  .hover-bg-custom-blue:hover {
    background-color: #065c86;
  }

  .bg-custom-blue-2 {
    background-color: #026da2;
  }
  .hover-bg-custom-blue-2:hover {
    background-color: #0c4c6e;
  }
</style>
