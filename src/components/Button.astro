---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-6 p-3 font-semibold shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out uppercase";

const variantClasses = {
  primary: "bg-white hover:bg-neutral-200 text-gray-800",
  secondary: "bg-neutral-200 hover:bg-neutral-300 text-gray-800",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
